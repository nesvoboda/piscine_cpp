SRCS = main.cpp A.cpp B.cpp C.cpp Base.cpp
OBJS = $(SRCS:.cpp=.o)
NAME = guess
CFLAGS = -Wall -Wextra -Werror

all:		$(NAME)

.c.o:
			clang++ $(CFLAGS) -c $< -o $@

$(NAME):	$(OBJS)
			clang++ $(OBJS) $(CFLAGS) -o $(NAME)

clean:
			rm -f $(OBJS)


fclean:		clean
			rm -f $(NAME)

re:			fclean all

